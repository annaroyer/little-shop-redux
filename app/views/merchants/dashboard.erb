<head>
  <link rel="stylesheet" type="text/css" href="../../../main.css">
  <link rel="stylesheet" type="text/css" href="../../../reset.css">
  <title>Don't Enter : Shop Inside</title>
  <link href="/images/favicon.ico" rel="icon" type="image/x-icon" />
  <link href="https://fonts.googleapis.com/css?family=Fredericka+the+Great|Josefin+Slab" rel="stylesheet">
</head>
<div class="top">
  <div class="banner">
    <a href="/"><img src="../../../images/little_shop_rusty50.png"/></a>
  </div>
</div>
<div class="nav">
  <div class="dropdown">
    <a href="/merchants"><button class="dropbutton">Merchants</button></a>
    <div class="dropdown-content">
      <a href="/merchants-dashboard">Merchants Dashboard</a>
      <a href="/merchants/new">Create New Merchant</a>
      <form action="/merchants?:params" method="GET">
        <input class="find" type="text" name="name" placeholder="Find by Name...">
      </form>
    </div>
  </div>
  <div class="dropdown">
    <a href="/categories"><button class="dropbutton">Categories</button></a>
    <div class="dropdown-content">
      <a href="/categories-dashboard">Categories Dashboard</a>
      <a href="/categories/new">Create New Category</a>
      <form action="/categories?:params" method="GET">
        <input class="find" type="text" name="name" placeholder="Find by Name...">
      </form>
    </div>
  </div>
  <div class="dropdown">
    <a href="/items"><button class="dropbutton">Items</button></a>
    <div class="dropdown-content">
      <a href="/items-dashboard">Items Dashboard</a>
      <a href="/items/new">Create New Item</a>
      <form action="/items?:params" method="GET">
        <input class="find" type="text" name="title" placeholder="Find by Name...">
      </form>
    </div>
  </div>
</div>
<div class="container">
  <div class="featured-container">
    Merchant With The Highest Item Price
    Merchant With The Most Items
    <div class="featured-returns">
      <div class="featured-container">

      </div>
    </div>
  </div>
  <div class="all-container">
    <div class="returns">
    <% @merchants.each do |merchant| %>
      <div class="return">
        <div class="return_link">
          <a href="/merchants/<%= merchant.id %>"><p><%= merchant.name %></p></a>
        </div>
        <div class="utility">
          <form action="/merchants/<%= merchant.id %>/edit" method="GET">
            <input type="submit" value="Edit"/>
          </form>
          <form action="/merchants/<%= merchant.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE"/>
            <input type="submit" value="Delete"/>
          </form>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

<h1>Merchant With The Most Items:</h1>
<% @with_most_items.each do |merchant| %>
  <%= merchant.name %>
 <ul>
 <% merchant.items do |item| %>
    <li><%= item.title %></li>
   <% end %>
<% end %>
</ul>
<h1>Merchant with the Highest Priced Item:</h1>
<h2> <%= @with_highest_price.name %></h2>
<table>
  <tr>
    <td><h2>Merchant Name</h2></td>
    <td><h2>Total Items</h2></td>
    <td><h2>Total Price of Items</h2></td>
  </tr>
<% @merchants.each do |merchant| %>
  <tr>
    <td><%= merchant.name %></td>
    <td><%= merchant.items.count %></td>
    <td>$<%= "%.2f" % merchant.total_price_of_items %></td>
  </tr>
<% end %>
</table>
