<a href="/merchants/index/new"><input type="button" value="New Merchant"></a>
<form action="/merchants/index/show" method="post">
  <input type="text" name="merchants[name]" placeholder="Merchant name here">
  <input type="submit" value="Find">
</form>

<h1>All The Merchants</h1>

<% @merchants.each do |merchant| %>
  <a href="/merchants/index/<%= merchant.id %>"><p><%= merchant.name %></p></a>
  <a href="/merchants/index/<%= merchant.id %>/edit"><input type="button" value="Edit Merchant"></a>
  <a href="/merchants/index/<%= merchant.id %>/delete"><input type="button" value="Delete Merchant"></a>
<% end %>
