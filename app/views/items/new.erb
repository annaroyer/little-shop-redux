<a href="/">Little Shop Home</a>
<a href="/items">Items</a>

<h1>New Item</h1>

<form action="/items" method="POST">
  Title:<br>
  <input type="text" name="item[title]"/><br><br>
  Description:<br>
  <textarea name="item[description]"></textarea><br><br>
  Price:<br>
  $<input type="number" step="0.01" name="item[unit_price]"/><br><br>
  Image URL:<br>
  <input type="url" name="item[image]"/><br><br>
  Merchant:<br>
  <select><optgroup value="Merchant">
    <% @merchants.each do |merchant| %>
      <option name="item[merchant_id]" value="<%= merchant.id %>"/><%= merchant.name %></option>
      <% end %>
  </optgroup></select><br><br>
  Category:<br>
  <select><optgroup>
    <% @categories.each do |category| %>
      <option name="item[category_id]" value="<%= category.id %>"/><%= category.name %></option>
      <% end %>
  </optgroup></select><br><br>
  <input type="submit" value="Submit"/>
</form>
