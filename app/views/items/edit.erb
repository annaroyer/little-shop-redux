<a href="/items">Items</a>

<h1>Edit Item</h1>

<form action="/items/<%= @item.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT"/>
  Title:<br>
  <input type="text" name="item[title]" value="<%= @item.title %>"/><br><br>
  Description:<br>
  <textarea name="item[description]"><%= @item.description %></textarea><br><br>
  Price:<br>
  <input type="number" name="item[unit_price]" value="<%= '%.2f' % @item.price %>"/><br><br>
  Image URL:<br>
  <input type="text" name="item[image]" value="<%= @item.image %>"/><br><br>
  Merchant:
  <select><optgroup value="<%= @item.merchant %>">
    <% @merchants.each do |merchant| %>
      <option name="item[merchant_id]" value="<%= merchant.id %>"/><%= merchant.name %></option>
      <% end %>
  </optgroup></select><br><br>
  Category:<br>
  <select><optgroup value="<%= @item.category %>">
    <% @categories.each do |category| %>
      <option name="item[category_id]" value="<%= category.id %>"/><%= category.name %></option>
      <% end %>
  </optgroup></select><br><br>
  <input type="submit" value="Submit"/>
</form>
